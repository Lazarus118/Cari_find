<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/content_main"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="co.aulatech.cari_find.ActivityMain">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="#fff"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.opengl.GLSurfaceView
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.SearchView
                android:id="@+id/search"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_mute"
                android:id="@+id/mute"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="370dp"
                android:layout_marginStart="370dp"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#DDD"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/near_me">

            <ImageView
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_near_me"
                android:id="@+id/imageView5"/>

            <TextView
                android:textStyle="bold"
                android:text="Near me"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/near_me_txt"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sites">

            <ImageView
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_tours"
                android:id="@+id/imageView6"/>

            <TextView
                android:textStyle="bold"
                android:text="Sites"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sites_txt"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/beaches">

            <ImageView
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_beaches"
                android:id="@+id/imageView7"/>

            <TextView
                android:textStyle="bold"
                android:text="Beaches"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/beaches_txt"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/hotels">

            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_hotel"
                android:id="@+id/imageView8"
                android:layout_weight="1"/>

            <TextView
                android:textStyle="bold"
                android:text="Hotels"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hotels_txt"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/restaurants">

            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_restaurant"
                android:id="@+id/imageView9"
                android:layout_weight="1"/>

            <TextView
                android:textStyle="bold"
                android:text="Restaurants"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/restaurants_txt"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/super_markets">

            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_supermarket"
                android:id="@+id/imageView10"
                android:layout_weight="1"/>

            <TextView
                android:textStyle="bold"
                android:text="Super markets"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/supermarkets_txt"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>